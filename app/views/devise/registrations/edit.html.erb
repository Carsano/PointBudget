
<%= render partial: "shared/form", locals:{resource: resource, action: 'edit_registration', path: registration_path(resource), method: :put, title: 'Edit', button: "Update"}%>

<div class="container d-flex justify-content-center align-items-center">
  <div class="row", style="margin-top:50px">
    <div class="col-md-12 d-flex flex-column justify-content-center align-items-center">
      
      <h3 class="pt-5">Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn-danger" %></p>

    </div>
  </div>
</div>
