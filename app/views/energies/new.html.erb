<h1>Energies#new</h1>
<p>Find me in app/views/energies/show.html.erb</p>

<div>
	<% if @full_simulation.only_one_gas_simulation %>
		<button type="button" class="btn btn-primary disabled" style="cursor:not-allowed">Gaz</button>
	  <button type="button" class="btn btn-primary disabled" style="cursor:not-allowed">Electricité</button>
	<% else %>
		<%=link_to "Gas", new_user_full_simulation_gas_simulation_path(current_user, @full_simulation), class: "btn btn-primary"%>
		<button type="button" class="btn btn-primary disabled" style="cursor:not-allowed">Electricité</button>
	<% end %>
</div>

<div>
	<%= link_to "Back", :back %>
</div>

<div class="btn-simulation bg-secondary text-white">
	<%= link_to new_user_full_simulation_gas_simulation_path(current_user, @full_simulation) do %>
			<div class="d-flex align-items-center btn-simulation flex-direction-raw">
				<span class="icon"><i class="fas fa-burn"></i></span>
				<h5>Gaz</h5>
			</div>
	<% end %>
</div>