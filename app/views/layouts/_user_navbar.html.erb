<%if @nav_user.nil? %>
<div class="container-fluid flex-grow-1 user-nav">
  <div class="row h-100">
    <nav class="col-md-2 d-none d-md-block bg-white sidebar user-nav" id="sidenav">
      <span id="nav-user-collapse">
      <i class="fas fa-angle-left nav-link-arrow" id="nav-arrow"></i>
      </span>
      <div class="sidebar h-100" >
        <ul class="nav flex-column">
          <li class="nav-item txt-user-nav-prem">
            <%= link_to("Mon profil", user_path(current_user), class: "nav-link, text-primary")%>
          </li>
          <li class="nav-item txt-user-nav">
            <%= link_to("Mes simulations", user_full_simulations_path(current_user), class: "nav-link, text-primary")%>
          </li>
          <br>
          <li class="nav-item txt-user-nav">
            <%= link_to("Nouvelle simulation", new_user_full_simulation_path(current_user), class: "nav-link, btn mr-2 mb-2 btn-pill btn-outline-success")%>
          </li>
        </ul>
      </div>
    </nav>
    <main role="main" class="col-12 col-md-10 ml-sm-auto" id="body_content_user">
      <%=yield%>
    </main>
  </div>
</div>
<%else %>
  <%=yield %>
<%end %>
