<div class="container">
  <div class="profile-section">
    <div class="row">
      <div class="col-md-12">
        <ul>
          <div class="row">
            <div class="col-md-6">
              <li class="form-group">
                <label for="exampleFormControlInput1">Votre nom</label>
                <div class="card">
                  <div class="form-control">
                    <%= current_user.last_name %>
                  </div>
                </div>
              </li>
              <li class="form-group">
                <label for="exampleFormControlInput1">Votre prénom</label>
                <div class="card">
                  <div class="form-control">
                   <%= current_user.first_name %>
                  </div>
                </div>
              </li>
              <li class="form-group">
                <label for="exampleFormControlInput1">Votre adresse email</label>
                <div class="card">
                  <div class="form-control">
                   <%= current_user.email %>
                  </div>
                </div>
              </li>
              <li class="form-group">
                <label>Votre numéro de téléphone</label>
                <div class="card">
                  <div class="form-control">
                    <%= current_user.phone_number %>
                  </div>
                </div>
              </li>
              <li>
               <%= link_to "Editer mon profil", edit_user_path(current_user), class: "btn btn-success"%>
              </div>
            </li>
          </div>
        </ul>
      </div>
    </div>
  </div>
