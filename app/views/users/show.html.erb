<div class="profile-section">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h3 class="my-3">Mon Profil</h3>
        <ul>
        <li class="form-group">
          <label for="exampleFormControlInput1">Votre nom</label>
            <div class="form-control">
              <%= current_user.last_name %>
            </div>
        </li>
        <li class="form-group">
          <label for="exampleFormControlInput1">Votre prénom</label>
          <div class="card">
            <div class="form-control">
             <%= current_user.first_name %>
            </div>
          </div>
        </li>
        <li class="form-group">
          <label for="exampleFormControlInput1">Votre adresse email</label>
          <div class="card">
            <div class="form-control">
             <%= current_user.email %>
            </div>
          </div>
        </li>
        <li class="form-group">
          <label>Votre numéro de téléphone</label>
          <div class="card">
            <div class="form-control">
              <%= current_user.phone_number%>
            </div>
          </div>
        </li>
        <li class="form-group">
          <label>Votre ville</label>
          <div class="card">
            <div class="form-control">
              <% if @user.has_city %>
              <%= current_user.city.name %>
              <%end %>
            </div>
          </div>
        </li>
        <li class="button-group">
         <%= link_to "Editer mon profil", edit_user_path(current_user), class: "btn btn-success"%>
        </li>
        <br>
        <li class="button-group">
         <%= link_to "Editer mon compte", edit_user_registration_path(current_user), class: "btn btn-success"%>
        </li>
      </ul>
      </div>
    </div>
  </div>
</div>