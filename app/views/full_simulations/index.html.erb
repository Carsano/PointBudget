<div class="row">
  <div class="col-md-12">
    <div class="profile-section">
      <div class="row">
        <div class="col-md-12">
         <h2 class="profile-title"><strong>Vos simulations en cours</strong></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col" style="width: 20%;">Numéro de simulation</th>
                <th scope="col" style="width: 20%;">Créée le</th>
                <th scope="col" style="width: 20%;">Etat</th>
                <th scope="col" style="width: 40%;">Action</th>
              </tr>
            </thead>
            <tbody>
              <% unless @simulations.nil? %>
                <% @simulations.each do |simu| %>
                  <% if simu.validated == false %>
                    <tr>
                      <th scope="row"><%= simu.id %></th>
                      <td><%= simu.created_at %></td>
                      <td><%= simu.validated %></td>
                      <td><%= link_to "Compléter cette simulation", user_full_simulation_path(current_user, simu), class: "btn btn-success" %></td> 
                    </tr>
                  <%end%>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="profile-section">
      <div class="row">
        <div class="col-md-12">
          <h2 class="profile-title"><strong>Vos simulations validées</strong></h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col" style="width: 20%;">Numéro de simulation</th>
                <th scope="col" style="width: 40%;">Créée le</th>
                <th scope="col" style="width: 20%;">Etat</th>
                <th scope="col" style="width: 20%;">Etat</th>
              </tr>
            </thead>
            <tbody>
              <% unless @simulations.nil? %>
                <% @simulations.each do |simu| %>
                  <% if simu.validated == true %>
                    <tr>
                      <th scope="row"><%= simu.id %></th>
                      <td><%= simu.created_at %></td>
                      <td><%= simu.validated %></td>
                      <td><%= simu.validated %></td>
                    </tr>
                  <% end %>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>