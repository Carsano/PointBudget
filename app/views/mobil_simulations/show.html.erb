<h1>MobilSimulations#show</h1>
<p>Find me in app/views/mobil_simulations/show.html.erb</p>

<!-- Card -->
<div class="container">
  <div class="row my-5">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="pricing-card">
        <div class="card shadow-soft border-light p-4">
          <!-- Header -->
          <header class="card-header border-bottom bg-white text-center d-flex flex-column">
            <div class="float-left"><%= @box_sim.created_at.to_formatted_s(:short)%></div>
            <div class="display-1 text-secondary font-weight-bold">
                <p class="align-top font-medium pr-5">Vous pouvez épargner</p><%= (@box_sim.box_cost_saved).round(2)%> €
            <span class="text-light font-small">/ an</span>
            </div>
          </header>
          <!-- Content -->
          <div class="card-body">
            <div class="row">
              <div class="col text-center">
                <ul class="list-group mb-4">
                  <li class="list-group-item"><strong>Coût mensuel de votre box internet</strong><br><%=@box_sim.actual_price_paid%> €</li>
                  <li class="list-group-item"><strong>Télevision</strong><br>
                      <%= @tv%> </li>
                </ul>
              </div>
              <div class="col text-center">
                <ul class="list-group mb-4">
                  <li class="list-group-item"><strong>Appels vers les fixes en France</strong>  <%= @call_fix_fr%></li>
                  <li class="list-group-item"><strong>Appels vers les mobiles en France</strong>
                      <%= @call_mob_fr%></li>
                </ul>
              </div>
            </div>
              <%= link_to 'Lancer une nouvelle simulation', new_user_full_simulation_path(current_user), class:"btn animate-up-3 btn-outline-secondary btn-block"%>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>

  <h2 class='text-center'>
  <%case @mobil_contracts.length %>
  <%when 0 %>
    Votre contrat actuel répond parfaitement à vos besoins !
  <% when 1 %>
    Voici le meilleur contrat pour vous
  <%else %>
    Voici les <%=@mobil_contracts.length %> meilleurs contrats pour vous
  <%end %>
  </h2>
  <div class="row my-5">
    <% @mobil_contracts.each do |contract| %>
      <div class="col-md-4">

        <div class="pricing-card">
          <div class="card shadow-soft border-light p-4">
            <!-- Header -->
            <header class="card-header border-bottom bg-white text-center">
              <span class="d-block">
                <span class="display-1 text-primary font-weight-bold">
                    <span class="align-top font-medium"><%= contract.supplier %></span>
                    <p>Offre : <%=contract.offer_name %></p>
                </span>
              </span>
            </header>
            <!-- End Header -->
            <!-- Content -->
            <div class="card-body">
              <ul class="list-group mb-4">
                <li class="list-group-item"><strong>Prix de l'abonnement par mois</strong> : <%=contract.bundle_price %> € </li>
              </ul>
            </div>
            <!-- End Content -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render partial: 'shared/back' %>