          <tr>
            <th scope="row"><%= @gas_sim.id %></th>
            <td><%= @gas_sim.created_at.to_formatted_s(:short)  %></td>
            <td><%= @gas_sim.floor_space%></td>
            <td><%= @gas_sim.heat_type%></td>
            <td><%= @gas_sim.water_cooking_type%></td>
            <td><%= @gas_sim.residents_number%></td>
            <td><%= @gas_sim.gas_use%></td>
            <td><%=@gas_sim.actual_price_paid%></td>
            <td><%= @gas_sim.gas_cost_saved%></td>
          </tr>
