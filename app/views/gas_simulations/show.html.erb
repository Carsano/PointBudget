  <div class="row">
    <div class="col-md-12">
     <h2 class="profile-title"><strong>Votre simulation de gaz</strong></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col" style="width: 5%;">Simulation</th>
            <th scope="col" style="width: 10%;">Créée le</th>
            <th scope="col" style="width: 10%;">Superficie</th>
            <th scope="col" style="width: 10%;">Type de chauffage (eau)</th>
            <th scope="col" style="width: 10%;">Type de chauffage (maison)</th>
            <th scope="col" style="width: 10%;">Nombre d'habitants</th>
